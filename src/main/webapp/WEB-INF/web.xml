<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>main.internet.shop.controller.IndexController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>main.internet.shop.controller.RegistrationController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allUsers</servlet-name>
        <servlet-class>main.internet.shop.controller.GetAllUserController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allUsers</servlet-name>
        <url-pattern>/user/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userDelete</servlet-name>
        <servlet-class>main.internet.shop.controller.UserDeleteController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>userDelete</servlet-name>
        <url-pattern>/user/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Product</servlet-name>
        <servlet-class>main.internet.shop.controller.GetAllProductController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Product</servlet-name>
        <url-pattern>/product/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addProduct</servlet-name>
        <servlet-class>main.internet.shop.controller.ProductAddController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addProduct</servlet-name>
        <url-pattern>/product/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>buyProduct</servlet-name>
        <servlet-class>main.internet.shop.controller.ProductBuyController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>buyProduct</servlet-name>
        <url-pattern>/product/buy</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>shoppingCart</servlet-name>
        <servlet-class>main.internet.shop.controller.ShoppingCartController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>shoppingCart</servlet-name>
        <url-pattern>/shopping-cart/products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>entrance</servlet-name>
        <servlet-class>main.internet.shop.controller.EntranceController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>entrance</servlet-name>
        <url-pattern>/entrance</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>main-menu</servlet-name>
        <servlet-class>main.internet.shop.controller.MainMenuController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>main-menu</servlet-name>
        <url-pattern>/main-menu</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SuccessBuying</servlet-name>
        <servlet-class>main.internet.shop.controller.SuccessBuyingController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SuccessBuying</servlet-name>
        <url-pattern>/product/success-buying</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ItemDelete</servlet-name>
        <servlet-class>main.internet.shop.controller.ItemDeleteController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ItemDelete</servlet-name>
        <url-pattern>/shopping-cart/delete-item</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserOrders</servlet-name>
        <servlet-class>main.internet.shop.controller.UserOrderController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserOrders</servlet-name>
        <url-pattern>/order/user-orders</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateOrder</servlet-name>
        <servlet-class>main.internet.shop.controller.CreateOrderController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CreateOrder</servlet-name>
        <url-pattern>/order/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderDetails</servlet-name>
        <servlet-class>main.internet.shop.controller.OrderDetailsController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>OrderDetails</servlet-name>
        <url-pattern>/order/details</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AllOrders</servlet-name>
        <servlet-class>main.internet.shop.controller.OrdersAdminController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AllOrders</servlet-name>
        <url-pattern>/admin/orders</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteOrder</servlet-name>
        <servlet-class>main.internet.shop.controller.OrderDeleteController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeleteOrder</servlet-name>
        <url-pattern>/admin/delete-order</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminProductService</servlet-name>
        <servlet-class>main.internet.shop.controller.AdminProductServiceController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminProductService</servlet-name>
        <url-pattern>/admin/products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminProductDelete</servlet-name>
        <servlet-class>main.internet.shop.controller.AdminProductDeleteController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminProductDelete</servlet-name>
        <url-pattern>/admin/product-delete</url-pattern>
    </servlet-mapping>
</web-app>
